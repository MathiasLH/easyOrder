<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editSmoerrebroed"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="582dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/edit_foodimage"
            android:layout_width="match_parent"
            android:layout_height="249dp"
            app:srcCompat="@drawable/dyrlaegensnatmad_big"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="51dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="388dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checked="true"
                android:clickable="true"
                android:text="Mørkt brød"
                android:buttonTint="@color/checkboxColor"
                android:background="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Lyst brød"
                android:buttonTint="@color/checkboxColor"
                android:background="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checked="true"
                android:text="Med rødløg"
                android:buttonTint="@color/checkboxColor"
                android:background="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checked="true"
                android:text="Med karse"
                android:buttonTint="@color/checkboxColor"
                android:background="#FFFFFF"/>

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checked="true"
                android:text="Med sky"
                android:buttonTint="@color/checkboxColor"
                android:background="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/edit_addtobasketbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/btnColor"
        android:text="føj til kurv"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>